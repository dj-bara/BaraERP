# BaraSuite Environment Configuration
# Copy this file to .env and configure your environment

# Application
APP_NAME=BaraSuite
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Budapest
APP_URL=http://localhost:8000
APP_LOCALE=hu
APP_FALLBACK_LOCALE=hu
APP_FAKER_LOCALE=hu_HU

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=barasuite
DB_USERNAME=barasuite
DB_PASSWORD=your_secure_password_here

# Redis (Optional - for caching and queues)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_STORE=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@barasuite.hu"
MAIL_FROM_NAME="${APP_NAME}"

# Unas Webshop Integration (Hamarosan)
UNAS_API_ENABLED=false
UNAS_API_URL=https://api.unas.eu/shop/
UNAS_API_KEY=
UNAS_API_TOKEN=
UNAS_SHOP_ID=

# Billingo integráció (később)
BILLINGO_API_KEY=
BILLINGO_BLOCK_UID=

# Számlázz.hu integráció (később)
SZAMLAZZHU_API_KEY=
SZAMLAZZ_USERNAME=
SZAMLAZZ_PASSWORD=
